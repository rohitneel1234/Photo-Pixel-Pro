<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundCardColor"
    tools:context=".fragments.BackgroundRemoverFragment">

    <ImageView
        android:id="@+id/image_view_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_eraser_color"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageViewSetting"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:src="@drawable/bg_eraser_home" />


    <LinearLayout
        android:id="@+id/linearLayoutEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.rohitneel.photopixelpro.photocollage.widget.SquareLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp">

            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/RippleStyleWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_circle_edit">

                <LinearLayout
                    android:id="@+id/linear_layout_eraser_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgScissor"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="3dp"
                        android:src="@drawable/tbg1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Eraser"
                        android:fontFamily="@font/font"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>

        </com.rohitneel.photopixelpro.photocollage.widget.SquareLayout>

        <com.rohitneel.photopixelpro.photocollage.widget.SquareLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp">

            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/RippleStyleWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_circle_edit">


                <LinearLayout
                    android:id="@+id/linear_layout_eraser_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/imgGallery"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_photo_gallery"
                        app:tint="@color/white"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Gallery"
                        android:fontFamily="@font/font"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>

        </com.rohitneel.photopixelpro.photocollage.widget.SquareLayout>

        <com.rohitneel.photopixelpro.photocollage.widget.SquareLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp">

            <com.balysv.materialripple.MaterialRippleLayout
                style="@style/RippleStyleWhite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_circle_edit">


                <LinearLayout
                    android:id="@+id/linear_layout_tutorial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_baseline_help_outline_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tutorial"
                        android:fontFamily="@font/font"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>
        </com.rohitneel.photopixelpro.photocollage.widget.SquareLayout>

    </LinearLayout>


</RelativeLayout>