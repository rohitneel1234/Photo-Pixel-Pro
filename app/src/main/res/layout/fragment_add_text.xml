<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linear_layout_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/add_text_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view_preview_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="3dp"
            android:textAlignment="gravity"/>

    </LinearLayout>

    <com.rohitneel.photopixelpro.photocollage.photo.PhotoEditText
        android:id="@+id/add_text_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BackgroundColor"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="5dp"
        android:inputType="textCapSentences|textMultiLine"
        android:fontFamily="@font/font"
        app:layout_constraintBottom_toTopOf="@id/linear_layout_edit_text_tools"/>

    <LinearLayout
        android:id="@+id/linear_layout_edit_text_tools"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="200dp"
        android:orientation="horizontal"
        android:background="@color/BackgroundCardColor"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/RippleStyleWhite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <ImageView
            android:id="@+id/image_view_keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="9dp"
            android:src="@drawable/ic_keyboard"
            app:tint="@color/white"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/RippleStyleWhite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <ImageView
            android:id="@+id/image_view_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            app:tint="@color/white"
            android:src="@drawable/ic_palette"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/RippleStyleWhite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <ImageView
            android:id="@+id/image_view_fonts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="9dp"
            app:tint="@color/white"
            android:src="@drawable/ic_font"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/RippleStyleWhite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <ImageView
            android:id="@+id/image_view_adjust"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            app:tint="@color/white"
            android:src="@drawable/ic_set"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/RippleStyleWhite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <ImageView
            android:id="@+id/image_view_save_change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            app:tint="@color/white"
            android:src="@drawable/ic_done"/>

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/scroll_view_change_font_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_edit_text_tools"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/BackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/textViewFont"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/mainColor"
                    android:textStyle="bold"
                    android:text="Fonts"
                    android:fontFamily="@font/font"/>

                <TextView
                    android:id="@+id/textViewShadow"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Shadows"
                    android:fontFamily="@font/font"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_fonts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_view_change_color_adjust"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_edit_text_tools"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="50dp"
            android:background="@color/BackgroundColor">

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:background="@drawable/background_card"
                android:backgroundTint="#252525"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageViewAlignLeft"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:src="@drawable/ic_format_align_left"/>

                <ImageView
                    android:id="@+id/imageViewAlignCenter"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:src="@drawable/ic_format_align_center_select"/>

                <ImageView
                    android:id="@+id/imageViewAlignRight"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:src="@drawable/ic_format_align_right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:text="Size"
                    android:fontFamily="@font/font"/>

                <SeekBar
                    android:id="@+id/seekbar_text_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginStart="5dp"
                    android:max="60"
                    android:progressDrawable="@drawable/progress_drawable"
                    android:thumb="@drawable/progress_thumb"
                    android:splitTrack="false"/>

                <TextView
                    android:id="@+id/seekbarSize"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/grayText"
                    android:text="0"
                    android:fontFamily="@font/font"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:text="Color"
                    android:fontFamily="@font/font"/>

                <SeekBar
                    android:id="@+id/seekbar_text_opacity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginStart="5dp"
                    android:max="255"
                    android:progressDrawable="@drawable/progress_drawable"
                    android:thumb="@drawable/progress_thumb"
                    android:splitTrack="false"/>

                <TextView
                    android:id="@+id/seekbarColor"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/grayText"
                    android:text="0"
                    android:fontFamily="@font/font"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:text="Background"
                    android:fontFamily="@font/font"/>

                <SeekBar
                    android:id="@+id/seekbar_background_opacity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginStart="5dp"
                    android:max="255"
                    android:progressDrawable="@drawable/progress_drawable"
                    android:thumb="@drawable/progress_thumb"
                    android:splitTrack="false"/>

                <TextView
                    android:id="@+id/seekbarBackground"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/grayText"
                    android:text="0"
                    android:fontFamily="@font/font"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:text="Radius"
                    android:fontFamily="@font/font"/>

                <SeekBar
                    android:id="@+id/seekbar_radius"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginStart="5dp"
                    android:max="30"
                    android:progressDrawable="@drawable/progress_drawable"
                    android:thumb="@drawable/progress_thumb"
                    android:splitTrack="false"/>

                <TextView
                    android:id="@+id/seekbarRadius"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/grayText"
                    android:text="0"
                    android:fontFamily="@font/font"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:text="Width"
                    android:fontFamily="@font/font"/>

                <SeekBar
                    android:id="@+id/seekbar_width"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginStart="5dp"
                    android:max="50"
                    android:progressDrawable="@drawable/progress_drawable"
                    android:thumb="@drawable/progress_thumb"
                    android:splitTrack="false"/>

                <TextView
                    android:id="@+id/seekbarWith"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/grayText"
                    android:text="0"
                    android:fontFamily="@font/font"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/grayText"
                    android:text="Height"
                    android:fontFamily="@font/font"/>

                <SeekBar
                    android:id="@+id/seekbar_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginStart="5dp"
                    android:max="50"
                    android:progressDrawable="@drawable/progress_drawable"
                    android:thumb="@drawable/progress_thumb"
                    android:splitTrack="false"/>

                <TextView
                    android:id="@+id/seekbarHeight"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/grayText"
                    android:text="0"
                    android:fontFamily="@font/font"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/scroll_view_change_color_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout_edit_text_tools"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/BackgroundColor"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:text="Color"
                    android:fontFamily="@font/font"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewColor"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="Background"
                        android:fontFamily="@font/font"
                        android:layout_centerVertical="true"/>

                    <com.balysv.materialripple.MaterialRippleLayout
                        style="@style/RippleStyleWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                    <CheckBox
                        android:id="@+id/checkbox_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/SCBSwitch"/>

                    </com.balysv.materialripple.MaterialRippleLayout>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewBackground"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="Texture"
                    android:fontFamily="@font/font"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/BackgroundCardColor"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/image_view_text_texture"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        app:tint="@color/white"
                        android:src="@drawable/ic_arrow_down"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/frame_layout_texture_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.rohitneel.photopixelpro.photocollage.picker.PhotoCarouselPicker
                        android:id="@+id/texture_carousel_picker"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:item_width="40"/>

                    <View
                        android:id="@+id/view_highlight_texture"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/black_border"
                        android:layout_gravity="center"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>