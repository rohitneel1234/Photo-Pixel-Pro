<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ContactUs">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/orangeColor"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:text="Email us with any query or feedback. We would happy to answer your queries or feedback and we'll be in touch with you as soon as possible!"
                />

            <ImageView
                android:id="@+id/mailSupport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gmail_icon"
                android:layout_below="@id/txtMsg"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/txtEmailID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mailSupport"
                android:layout_marginTop="10dp"
                android:text="rohitneel.app.feedback@gmail.com"
                android:textColor="@color/colorDarkBlue"
                android:fontFamily="@font/font"
                android:layout_centerHorizontal="true"
                />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mailSupport"
                android:layout_marginTop="50dp"
                android:layout_marginStart="10dp"
                android:layout_alignLeft="@+id/etSubject"
                android:gravity="top"
                android:textStyle="bold"
                android:text="Subject" />

            <EditText
                android:id="@+id/etSubject"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_below="@id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_message_edittext"
                android:gravity="top"
                android:includeFontPadding="true"
                android:inputType="textMultiLine"
                android:maxLength="50"
                android:paddingStart="5dp" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etSubject"
                android:layout_alignLeft="@+id/etMessage"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="Message"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_below="@+id/textView3"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:includeFontPadding="true"
                android:paddingStart="5dp"
                android:hint="@string/messageHint"
                android:layout_centerHorizontal="true"
                android:background="@drawable/custom_message_edittext"
                android:layout_marginTop="10dp"
                android:maxLength="250"
                />

            <Button
                android:id="@+id/button1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etMessage"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_alignStart="@id/etMessage"
                android:background="@color/alert"
                android:layout_marginTop="30dp"
                android:layout_marginStart="5dp"
                android:text="Send Message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/button1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>